---
import { Image } from "astro:assets";

const { project } = Astro.props;
---

<div class="group border border-[#ffffff10] rounded-2xl p-4 project-card">
  <!-- Preview Image -->
  <div class="rounded-2xl overflow-hidden shadow-lg mb-4">
    <Image
      src={project.image}
      alt={project.title}
      class="w-full h-48 md:h-72 object-cover transition-transform duration-300 group-hover:scale-105"
    />
  </div>

  <!-- Header -->
  <div class="flex items-start gap-4">
    <div class="flex-grow">
      <h4 class="text-2xl font-semibold">{project.title}</h4>
      <span class="text-sm text-[var(--white-icon)]">
        {project.status}
      </span>
    </div>

    <!-- Toggle button -->
    <button
      type="button"
      aria-label="Toggle details"
      class="size-14 flex justify-center items-center text-[var(--white-icon)] hover:text-white transition border border-[var(--white-icon-tr)] rounded-xl bg-[#1414149c] hover:bg-[var(--white-icon-tr)]"
      onclick={`toggleProject('${project.id}')`}
    >
      â–¼
    </button>
  </div>

  <!-- Expandable section -->
  <div
    id={`project-${project.id}`}
    class="project-details overflow-hidden max-h-0 transition-[max-height] duration-700 ease-in-out"
  >
    <div class="mt-6 pt-6 border-t border-[#ffffff10] space-y-4">
      <p class="text-sm text-[var(--white-icon)]">
        {project.description}
      </p>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        {project.gallery?.map((img) => (
          <Image
            src={img}
            alt={`${project.title} screenshot`}
            class="rounded-xl object-cover"
          />
        ))}
      </div>
    </div>
  </div>
</div>

<script>
  function toggleProject(id, btn) {
    // Cast NodeListOf<Element> to NodeListOf<HTMLElement>
    const allPanels = document.querySelectorAll(".project-details");
    const allButtons = document.querySelectorAll(".toggle-btn");
    const target = document.getElementById(`project-${id}`);

    if (!target) return;

    // TypeScript requires an explicit cast to HTMLElement
    const targetEl = /** @type {HTMLElement} */ (target);

    const isOpen =
      targetEl.style.maxHeight && targetEl.style.maxHeight !== "0px";

    allPanels.forEach((panel) => {
      const el = /** @type {HTMLElement} */ (panel);
      el.style.maxHeight = "0px";
    });

    allButtons.forEach((button) => {
      const btnEl = /** @type {HTMLElement} */ (button);
      btnEl.classList.remove("rotate-180");
    });

    if (!isOpen) {
      targetEl.style.maxHeight = targetEl.scrollHeight + "px";
      btn.classList.add("rotate-180");
    }
  }
</script>